#set("title") {Post Show}

#set("body") {
<section class="section">
  <div class="container">
    <div class="post">
      <h1 class="post__title">#(post.title)</h1>
      <h4>#(post.date)</h4>
      <div class="post__content">#get(post.body)</div>
    </div>
  </div>
</section>
}

#embed("layouts/master")
